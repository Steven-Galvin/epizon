<div class="title">
  <h3>Products</h3>
</div>


<div class="details"></div>
<div class="section">
  <div class="products">
    <% @products.each do |product| %>
      <div class="product">
        <div class="product-details" id="product-<%= product.id %>">
          <h4><%= link_to product.name, product_path(product), remote: true %></h4>
        </div>
        <div class="add-to-cart">
          <%= form_for @order_item, remote: true do |f| %>
          <%= f.hidden_field :product_id, value: product.id %>
          <%= f.number_field :quantity, min: 1, value: 1, required: true, placeholder: "Enter quantity" %>
          <%= f.submit "Add to cart", class: "waves-effect waves-light btn" %>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
