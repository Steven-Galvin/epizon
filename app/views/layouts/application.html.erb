<!DOCTYPE html>
<html>
  <head>
    <title>Epizon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper">
        <%= link_to "Epizon", root_path, class: "brand-logo center" %>
        <a href="#" data-activates="mobile-demo" class="right button-collapse"><i class="material-icons">menu</i></a>
        <ul class="left">
          <% if current_user %>
            <li>Hello <span id="nav-user"><%= current_user.name %></span>!</li>
          <% end %>
            <li><%= flash[:alert] %></li>
            <li><%= flash[:notice] %></li>
        </ul>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><span id="cart-quantity"><%= link_to "Cart (#{ cart_items })", cart_path %></span></li>
          <li><%= link_to "See all products", products_path %></li>
          <% if current_user %>
            <li><%= link_to "Sign out", '/sign_out' %></li>
          <% else %>
            <li><%= link_to "Sign up", 'sign_up' %></li>
            <li><%= link_to "Sign in", '/sign_in' %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
  <ul class="side-nav" id="mobile-demo">
    <% if current_user %>
      <li><%= current_user.name %> | <%= current_user.email %></li>
    <% end %>
    <li><%= link_to "Cart | Total items: #{ cart_items }", cart_path %></li>
    <li><%= link_to "See all products", products_path %></li>
    <% if current_user %>
      <li><%= link_to "Sign out", '/sign_out' %></li>
    <% else %>
      <li><%= link_to "Sign up", 'sign_up' %></li>
      <li><%= link_to "Sign in", '/sign_in' %></li>
    <% end %>
  </ul>

  <body>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
